@model List<WebAppRegistration.Models.Group>

@{
    ViewData["Title"] = "Головна сторінка";
}

<div class="text-center">
    <h1 class="display-4">Ласкаво просимо!</h1>
    <p class="lead">Каталог груп товарів</p>
</div>

<div class="row mt-4">
    @if (Model.Any())
    {
        @foreach (var group in Model)
        {
            <div class="col-md-4 mb-4">
                <a asp-controller="Product" asp-action="Index" asp-route-groupId="@group.Id" class="text-decoration-none">
                    <div class="card h-100 bg-dark text-white">
                        <div class="card-body">
                            <h5 class="card-title">@group.Name</h5>
                            <p class="card-text">@group.Description</p>
                        </div>
                        @if (group.Subgroups.Any())
                        {
                            <div class="card-footer">
                                <small class="text-muted">Кількість підгруп: @group.Subgroups.Count</small>
                            </div>
                        }
                    </div>
                </a>
            </div>
        }
    }
    else
    {
        <p class="text-center">Наразі немає жодної групи.</p>
    }
</div>