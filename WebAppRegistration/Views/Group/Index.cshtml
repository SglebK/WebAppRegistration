@model WebAppRegistration.Models.Group

@{
    ViewData["Title"] = "Керування групами";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <h4 class="mb-3">Створити нову групу</h4>

        <div id="groupError" class="alert alert-danger" style="display:none;"></div>
        <div id="groupSuccess" class="alert alert-success" style="display:none;"></div>

        <form id="createGroupForm">
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="Назва групи" />
                <label asp-for="Name" class="text-dark"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Description" class="form-control" placeholder="Опис" />
                <label asp-for="Description" class="text-dark"></label>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="ParentId" class="form-select" asp-items="@(new SelectList(ViewBag.Groups, "Id", "Name"))">
                    <option value="0">Без батьківської групи (головна)</option>
                </select>
                <label asp-for="ParentId" class="text-dark">Батьківська група</label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Створити</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#createGroupForm').on('submit', function (e) {
                e.preventDefault();
                var form = $(this);

                $('#groupError').hide();
                $('#groupSuccess').hide();

                $.ajax({
                    url: '@Url.Action("CreateGroup", "Group")',
                    method: 'POST',
                    data: form.serialize(),
                    success: function (response) {
                        $('#groupSuccess').text(response).show();
                        form[0].reset();

                        setTimeout(function() {
                           $.get(location.href, function(data) {
                               var newOptions = $(data).find('#ParentId').html();
                               $('#ParentId').html(newOptions);
                           });
                        }, 500);
                    },
                    error: function (xhr) {
                        $('#groupError').text(xhr.responseText).show();
                    }
                });
            });
        });
    </script>
}