@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAppRegistration</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppRegistration.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebAppRegistration</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav d-flex align-items-center">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            var birthdayClaim = User.FindFirst(ClaimTypes.DateOfBirth)?.Value;
                            if (birthdayClaim != null && DateTime.TryParse(birthdayClaim, out var birthday))
                            {
                                var today = DateTime.Today;
                                var nextBirthday = new DateTime(today.Year, birthday.Month, birthday.Day);
                                if (nextBirthday < today)
                                {
                                    nextBirthday = nextBirthday.AddYears(1);
                                }
                                int daysUntilBirthday = (nextBirthday - today).Days;
                                <li class="nav-item">
                                    <span class="navbar-text me-3">
                                        До вашого дня народження @daysUntilBirthday днів
                                    </span>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Cart" asp-action="Index">Кошик</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Group" asp-action="Index">Групи</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">Адмінка</a>
                            </li>

                            <li class="nav-item d-flex align-items-center">
                                <a asp-controller="Profile" asp-action="Index" class="user-avatar me-2 text-decoration-none" title="@User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value">
                                    @User.Identity.Name?[0].ToString().ToUpper()
                                </a>

                                <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="nav-link btn btn-link text-white">Вийти</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Реєстрація</a>
                            </li>
                            <li class="nav-item">
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#loginModal">
                                    Вхід
                                </button>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (User.Identity == null || !User.Identity.IsAuthenticated)
    {
        <partial name="_LoginPartial" model="new WebAppRegistration.Models.LoginViewModel()" />
    }

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebAppRegistration - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (User.Identity == null || !User.Identity.IsAuthenticated)
    {
        <script>
            $(function () {
                $('#loginForm').on('submit', function (e) {
                    e.preventDefault();
                    var form = $(this);
                    $.ajax({
                        url: form.attr('action'),
                        method: form.attr('method'),
                        data: form.serialize(),
                        success: function (response) {
                            window.location.reload();
                        },
                        error: function (xhr, status, error) {
                            $('#loginError').text(xhr.responseText).show();
                        }
                    });
                });
            });
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>