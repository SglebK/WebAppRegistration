@model List<WebAppRegistration.Models.Order>

@{
    ViewData["Title"] = "Історія замовлень";
}

<h1 class="text-center">@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (Model.Any())
{
    @foreach (var order in Model)
    {
        <div class="card bg-dark text-white mb-4">
            <div class="card-header d-flex justify-content-between">
                <span>Замовлення №@order.Id від @order.OrderDate.ToShortDateString()</span>
                <span>Загальна сума: @order.TotalPrice.ToString("C")</span>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @foreach (var item in order.OrderItems)
                    {
                        <li class="list-group-item bg-dark text-white">
                            @item.Product.Name - @item.Quantity шт. x @item.PriceAtOrder.ToString("C")
                        </li>
                    }
                </ul>
            </div>
            <div class="card-footer text-end">
                <form asp-controller="Order" asp-action="RepeatOrder" asp-route-orderId="@order.Id" method="post">
                    <button type="submit" class="btn btn-primary">Повторити замовлення</button>
                </form>
            </div>
        </div>
    }
}
else
{
    <p class="text-center mt-5">У вас ще немає замовлень.</p>
}